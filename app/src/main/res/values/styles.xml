<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RadioButtonStyleRed" parent="Theme.AppCompat.Light">
        <!--color of radio button -->
        <item name="colorAccent">@android:color/holo_red_dark</item>
        <!-- default color of radio button -->
        <item name="android:textColorPrimary">@android:color/white</item>

    </style>

    <style name="RadioButtonStyleOrange" parent="Theme.AppCompat.Light">
        <!--color of radio button -->
        <item name="colorAccent">@android:color/holo_orange_dark</item>
        <!-- default color of radio button -->
        <item name="android:textColorPrimary">@android:color/white</item>

    </style>

    <style name="RadioButtonStyleYellow" parent="Theme.AppCompat.Light">
        <!--color of radio button -->
        <item name="colorAccent">@android:color/holo_orange_light</item>
        <!-- default color of radio button -->
        <item name="android:textColorPrimary">@android:color/white</item>

    </style>

    <style name="RadioButtonStyleGreen" parent="Theme.AppCompat.Light">
        <!--color of radio button -->
        <item name="colorAccent">@android:color/holo_green_dark</item>
        <!-- default color of radio button -->
        <item name="android:textColorPrimary">@android:color/white</item>

    </style>

    <style name="RadioButtonStyleBlue" parent="Theme.AppCompat.Light">
        <!--color of radio button -->
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <!-- default color of radio button -->
        <item name="android:textColorPrimary">@android:color/white</item>

    </style>

</resources>
